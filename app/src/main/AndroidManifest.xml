<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ideaz.tomorrow" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ideaz.tomorrow.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.ideaz.tomorrow.ProfileActivity"
                  android:label="@string/profile"/>
        <activity android:name="com.ideaz.tomorrow.PreferencesActivity"
                  android:label="@string/preferences"/>
        <activity android:name="com.ideaz.tomorrow.ActivityMakerActivity"/>
        <activity android:name="com.ideaz.tomorrow.ActivitySelectorActivity"/>
        <activity android:name="com.ideaz.tomorrow.PartnerSelectionActivity"/>
        <activity android:name="com.ideaz.tomorrow.ConfirmActivity"/>
    </application>

</manifest>
